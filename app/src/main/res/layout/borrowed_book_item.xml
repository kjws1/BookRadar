<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_fragment_borrow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_line"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/imageViewBookCover"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:contentDescription="@string/book_cover_image"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:labelFor="@id/textTitleValue"
                android:text="@string/text_title" />

            <TextView
                android:id="@+id/textTitleValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="제목"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textLibrary"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:labelFor="@id/textLibraryValue"
                android:text="@string/text_library" />

            <TextView
                android:id="@+id/textLibraryValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="도서관"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textDuration"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:labelFor="@id/textDurationValue"
                android:text="@string/text_duration" />

            <TextView
                android:id="@+id/textDurationValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="기간"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textBorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="빌린 날짜"
                android:textAlignment="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewDurLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textDue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="반납 날짜"
                android:textAlignment="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/buttonDel"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:contentDescription="@string/delete_button"
        android:src="@drawable/cancel_icon" />
</LinearLayout>
